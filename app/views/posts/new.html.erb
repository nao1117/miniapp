<div class="container"> 

  <h3>投稿する</h3>
  <%= form_for @posts do |f| %>
  <%= f.label :タイトル %>
  <%= f.text_field :title %>
  <%= f.label :画像 %>
  <%= f.text_field :image %>
  <%= f.label :内容 %>
  <%= f.text_area :text %>
  <%= f.submit "送信", class: "btn-large blue darken-1" %>
  <% end %>

</div>

